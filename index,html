    <script>
        function mulaiKejutan() {
            const musik = document.getElementById('musik');
            musik.play(); // Menjalankan musik

            document.getElementById('pesan').style.display = 'block';

            // Efek Hati Berjatuhan
            setInterval(() => {
                const heart = document.createElement('div');
                heart.innerHTML = '‚ù§Ô∏è';
                heart.className = 'falling-hearts';
                heart.style.left = Math.random() * 100 + 'vw';
                heart.style.fontSize = Math.random() * 20 + 10 + 'px';
                heart.style.duration = Math.random() * 3 + 2 + 's';
                document.body.appendChild(heart);
                setTimeout(() => heart.remove(), 5000);
            }, 300);

            // Munculkan Pesan Beruntun (SweetAlert2)
            Swal.fire({
                title: 'HBD Sayang Aam! üéÇ',
                text: 'Semoga panjang umur & sehat selalu ya...',
                imageUrl: 'https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNHJ6eXJ6eXJ6eXJ6eXJ6eXJ6eXJ6eXJ6eXJ6eXJ6eXJ6eCZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/L95W4M8qOIsS0K559v/giphy.gif',
                imageWidth: 200,
                confirmButtonText: 'Lanjut'
            }).then(() => {
                Swal.fire({
                    title: 'Janji ya?',
                    text: 'Tetap sama aku terus selamanya! üíç',
                    confirmButtonText: 'Iya, Janji ‚ù§Ô∏è'
                });
            });
        }
    </script>
